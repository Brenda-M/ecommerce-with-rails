<%= turbo_frame_tag(dom_id(product)) do%>
  <li class="flex items-center bg-white rounded-lg shadow-md overflow-hidden mb-4">
    <%= button_to line_items_path(product_id: product), class: "w-32 h-auto" do %>
      <%= image_tag(product.image_url) %>
    <% end %>
      <div class="p-4 flex-1">
        <h2 class="text-xl font-semibold mb-2"><%= product.title %></h2>
        <p class="text-gray-700 mb-4"><%= product.description %></p>
        <div class="text-gray-900 font-bold text-lg"><%= number_to_currency(product.price, unit: "Ksh") %></div>
        <%= button_to 'Add to Cart',
         line_items_path(product_id: product),
         form_class: 'inline',
         class: 'ml-4 rounded-lg py-1 px-2
         text-white bg-green-600' %>
      </div>
  </li>
<% end %>

