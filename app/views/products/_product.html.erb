<div id="<%= dom_id product %>" class="flex flex-col mt-8 lg:flex-row items-center justify-between <%= cycle('bg-gray-100', 'bg-gray-200') %> p-8">
  <div class="w-full lg:w-1/2 mb-8 lg:mb-0">
    <div class="mb-5">
      <%= image_tag(product.image_url, class: 'w-full rounded-lg shadow-md') %>
    </div>
  </div>

  <div class="w-full lg:w-1/2 lg:pl-12">
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-gray-800"><%= product.title %></h2>
      <p class="text-base text-gray-700"><%= truncate(product.description, length: 80) %></p>
    </div>

    <div class="mb-8">
      <strong class="block font-semibold mb-2 text-gray-800">Price:</strong>
      <p class="text-xl text-gray-900">$<%= number_with_precision(product.price, precision: 2) %></p>
    </div>

    <% if action_name != "show" %>
      <div class="flex flex-col lg:flex-row items-center">
        <%= link_to "Show this product", product, class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium hover:bg-blue-600 mb-2 lg:mb-0 lg:mr-4" %>
        <%= link_to "Edit this product", edit_product_path(product), class: "rounded-lg py-3 px-5 bg-green-500 text-white inline-block font-medium hover:bg-green-600" %>
      </div>
    <% end %>
  </div>
</div>
