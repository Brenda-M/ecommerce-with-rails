<div id="<%= dom_id product %>" class="bg-white rounded-lg shadow-md p-6">
  <div >
    <div class="mb-5">
      <%= image_tag(product.image_url, class: 'h-40 w-auto rounded-lg shadow-md') %>
    </div>

    <div class="col-span-2 sm:col-span-1">
      <div class="mb-5">
        <p><%= product.title %></p>
      </div>

      <div class="mb-5">
        <strong class="block font-medium mb-1">Description:</strong>
        <p><%= truncate(product.description, length: 100) %></p>
      </div>

      <div class="mb-5">
        <strong class="block font-medium mb-1">Price:</strong>
        <p>$<%= number_with_precision(product.price, precision: 2) %></p>
      </div>

      <% if action_name != "show" %>
        <div class="flex items-center">
          <%= link_to "Show this product", product, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mr-2" %>
          <%= link_to "Edit this product", edit_product_path(product), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
